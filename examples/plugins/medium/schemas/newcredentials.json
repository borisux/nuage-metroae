{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$id": "urn:nuage-metroae:newcredentials",
    "title": "NewCredentials",
    "description": "MetroAE Custom Credentials",
    "type": "object",
    "widget": "form",
    "additionalProperties": false,
    "properties": {
        "name": {
            "type": "string",
            "title": "Name",
            "default": "",
            "description": "Name of credentials set.  In the current version, only the first credentials set will be utilized.",
            "encrypt": false,
            "sectionBegin": "Custom credentials",
            "propertyOrder": 10
        },
        "my_new_vsd_user": {
            "type": "string",
            "title": "VSD Custom Username",
            "description": "Custom User to add to the vsd.",
            "default": "root",
            "component_type": "vsd",
            "encrypt": true,
            "sectionEnd": "Custom credentials",
            "propertyOrder": 20
        }
    },
    "required": ["name", "my_new_vsd_user"]

}
